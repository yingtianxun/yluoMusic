<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_gv_download"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="65dp"
        android:drawableTop="@drawable/love_song_gridview_download"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="下载" />

    <TextView
        android:id="@+id/tv_gv_add"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="65dp"
        android:drawableTop="@drawable/love_song_gridview_add"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal"
        android:text="添加" />

    <TextView
        android:id="@+id/tv_gv_share"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="65dp"
        android:drawableTop="@drawable/love_song_gridview_share"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal"
        android:text="分享" />

    <TextView
        android:id="@+id/tv_gv_songinfo"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="65dp"
        android:drawableTop="@drawable/love_song_gridview_songinfo"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal"
        android:text="歌曲信息" />

    <TextView
        android:id="@+id/tv_gv_delete"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="65dp"
        android:drawableTop="@drawable/love_song_gridview_delete"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal"
        android:text="删除" />

    <TextView
        android:id="@+id/tv_gv_songwild"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="65dp"
        android:drawableTop="@drawable/love_song_gridview_songwild"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal"
        android:text="歌曲漫游" />

    <TextView
        android:id="@+id/tv_gv_ksong"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="65dp"
        android:drawableTop="@drawable/love_song_gridview_ksong"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal"
        android:text="K歌" />

    <TextView
        android:id="@+id/tv_gv_mv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="65dp"
        android:drawableTop="@drawable/love_song_gridview_mv"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal"
        android:text="MV" />

</LinearLayout>