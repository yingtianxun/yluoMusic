<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yluo="http://schemas.android.com/apk/res/com.yluo.yluomusic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c3q"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/b6a" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/abf" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="无字碑"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="张靓颖"
                android:textColor="#aaffffff"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" >

        <com.yluo.yluomusic.ui.widget.YluoTextView
            style="@style/play_song_select_type_tx"
            android:drawableRight="@drawable/aor"
            android:text="标准" />

        <com.yluo.yluomusic.ui.widget.YluoTextView
            style="@style/play_song_select_type_tx"
            android:text="纯净人声" />

        <com.yluo.yluomusic.ui.widget.YluoTextView
            style="@style/play_song_select_type_tx"
            android:drawableRight="@drawable/aor"
            android:text="封面" />
    </LinearLayout>

    <com.yluo.yluomusic.ui.widget.MusicWordView
        android:id="@+id/songwords"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/e2r" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/e2s" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/e2p" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/e2w" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/e2v" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/tx_show_cur_playtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="0:00"
            android:textColor="#99ffffff"
            android:textSize="12dp" />

        <com.yluo.yluomusic.ui.widget.YluoSeekBar
            android:id="@+id/sb_test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:max="100"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            yluo:determin_color="#ffDA4C6D"
            yluo:show_time_indicator="true"
            yluo:thumb_color="#ffffffff" />

        <TextView
            android:id="@+id/tx_show_total_playtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="4:31"
            android:textColor="#99ffffff"
            android:textSize="12dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/bp_" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/play_song_btn_bk"
                android:src="@drawable/dje" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/play_song_btn_bk"
                android:src="@drawable/djd" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/play_song_btn_bk"
                android:src="@drawable/djb" />
        </LinearLayout>

        <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/bp4" />
    </RelativeLayout>

</LinearLayout>