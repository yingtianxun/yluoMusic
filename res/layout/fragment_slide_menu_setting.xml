<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark" >

        <ImageButton
            android:id="@+id/ib_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/slide_menu_setting_ib_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textSize="20dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="#888888" >
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/ll_setting_hello"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:clickable="true">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="启动问候音" />
                <ImageView 
                    android:id="@+id/iv_setting_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/slide_menu_setting_iv_next"
                    />  
                <TextView
                    android:layout_toLeftOf="@+id/iv_setting_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textColor="#55888888"
                    android:text="经典版" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="#888888" >
            </LinearLayout>
            
            
          <RelativeLayout
                android:id="@+id/ll_setting_skin_center"
                android:layout_width="wrap_content"
                android:layout_height="40dp" 
                android:clickable="true">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="皮肤中心" />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/slide_menu_setting_iv_next"
                    />  
            </RelativeLayout>
            <View 
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#55000000"/>
            
            <RelativeLayout
                android:id="@+id/ll_setting_test_listening"
                android:layout_width="wrap_content"
                android:layout_height="40dp" 
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="在线试听音质" />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/slide_menu_setting_iv_next"
                    />  
            </RelativeLayout>
            <View 
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#55000000"/>
            
            <RelativeLayout
                android:id="@+id/ll_setting_download_photograph"
                android:layout_width="wrap_content"
                android:layout_height="40dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="自动下载写真/封面" />
                <CheckBox 
                    android:button="@null"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/slide_menu_checkbox_close_gray"
                    />  
            </RelativeLayout>
            <View 
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#55000000"/>
            
            <RelativeLayout
                android:id="@+id/ll_setting_rotate_photograph"
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="头像/封面自动旋转" />
                <CheckBox 
                    android:button="@null"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/slide_menu_checkbox_close_gray"
                    />  
            </RelativeLayout>
            <View 
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#55000000"/>
            <RelativeLayout
                android:id="@+id/ll_setting_store"
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="边听边存" />
                <CheckBox 
                    android:button="@null"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/slide_menu_checkbox_close_gray"
                    />  
            </RelativeLayout>
            <View 
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#55000000"/>
  
            <RelativeLayout
                android:id="@+id/ll_setting_download"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:clickable="true">
                <TextView
                    android:id="@+id/tv_setting_downlown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="歌曲下载目录" />
                <TextView
                    android:layout_below="@id/tv_setting_downlown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/storage/sdcard0"
                    android:textSize="10dp"
                    android:textColor="#55000000" />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/slide_menu_setting_iv_next"
                    />  
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="#888888" >
            </LinearLayout>
            
            <RelativeLayout
                android:id="@+id/ll_setting_shake"
                android:layout_width="wrap_content"
                android:layout_height="40dp" 
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="摇一摇切歌" />
               <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:textSize="10dp"
                    android:textColor="#55888888"
                    android:text="不开启" />
            </RelativeLayout>
            <View 
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#55000000"/>
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tv_line_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="线控切歌" />
               <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_line_control"
                    android:layout_centerVertical="true"
                    android:textSize="10dp"
                    android:textColor="#cccccc"
                    android:clickable="true"
                    android:text="如何操作" />
                <CheckBox 
                    android:button="@null"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/slide_menu_checkbox_close_gray"
                    />  
            </RelativeLayout>
            
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="#888888" >
            </LinearLayout>
            
          <RelativeLayout
                android:id="@+id/ll_setting_clear_buffer"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:clickable="true">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="清除缓存" />
                <ImageView 
                    android:id="@+id/iv_setting_buffer_clear_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/slide_menu_setting_iv_next"
                    />  
                <TextView
                    android:layout_toLeftOf="@+id/iv_setting_buffer_clear_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textColor="#55888888"
                    android:text="0M" />
            </RelativeLayout>
            
          <View 
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#55000000"/>
            
            <RelativeLayout
                android:id="@+id/ll_setting_msg_clear"
                android:layout_width="wrap_content"
                android:layout_height="40dp" 
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="清空消息记录" />
            </RelativeLayout>
            
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="#888888" >
            </LinearLayout>
            
          <RelativeLayout
                android:id="@+id/ll_setting_msg_setting"
                android:layout_width="wrap_content"
                android:layout_height="40dp" 
                android:clickable="true">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="清除设置" />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/slide_menu_setting_iv_next"
                    />          
            </RelativeLayout>
            
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="#888888" >
            </LinearLayout>
            
          <RelativeLayout
                android:id="@+id/ll_setting_kugou_about"
                android:layout_width="wrap_content"
                android:layout_height="40dp" 
                android:clickable="true">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于酷狗音乐" />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/slide_menu_setting_iv_next"
                    />  
                    
            </RelativeLayout>
             <View 
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#55000000"/>
             <RelativeLayout
                android:id="@+id/ll_setting_ssuggestion_setting"
                android:layout_width="wrap_content"
                android:layout_height="40dp" 
                android:clickable="true">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="意见反馈" />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/slide_menu_setting_iv_next"
                    />  
                    
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>