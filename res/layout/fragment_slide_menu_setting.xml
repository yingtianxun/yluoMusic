<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark" >

        <ImageButton
            android:id="@+id/ib_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/slide_menu_setting_ib_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textSize="20dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="#888888" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_setting_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="启动问候音" />
                <ImageView 
                    android:id="@+id/iv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/slide_menu_setting_iv_next"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_next"
                    android:layout_marginRight="15dp"
                    android:text="经典版" />
            </RelativeLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="#888888" >
            </LinearLayout>
            
          <RelativeLayout
                android:id="@+id/ll_setting_skin_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="皮肤中心" />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/slide_menu_setting_iv_next"
                    />  
            </RelativeLayout>
            <View 
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#55000000"/>
            
            <RelativeLayout
                android:id="@+id/ll_setting_test_listening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线试听音质" />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/slide_menu_setting_iv_next"
                    />  
            </RelativeLayout>
            <View 
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#55000000"/>
            
            <RelativeLayout
                android:id="@+id/ll_setting_download_photograph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:background="#555555">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自动下载写真/封面" />
                <CheckBox 
                    android:button="@null"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/slide_menu_checkbox_close"
                    />  
            </RelativeLayout>
            <View 
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#55000000"/>
            
            <RelativeLayout
                android:id="@+id/ll_setting_rotate_photograph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:background="#555555">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像/封面自动旋转" />
                <CheckBox 
                    android:button="@null"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/slide_menu_checkbox_close"
                    />  
            </RelativeLayout>
            <View 
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#55000000"/>
            <RelativeLayout
                android:id="@+id/ll_setting_rotate_photograph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:background="#555555">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="边听边存" />
                <CheckBox 
                    android:button="@null"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/slide_menu_checkbox_close"
                    />  
            </RelativeLayout>
            <View 
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#55000000"/>
  
            <RelativeLayout
                android:id="@+id/ll_setting_test_listening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/tv_setting_downlown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="歌曲下载目录" />
                <TextView
                    android:layout_below="@id/tv_setting_downlown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/storage/sdcard0"
                    android:textSize="10dp"
                    android:textColor="#55000000" />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/slide_menu_setting_iv_next"
                    />  
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="#888888" >
            </LinearLayout>
            
            <RelativeLayout
                android:id="@+id/ll_setting_rotate_photograph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="摇一摇切歌" />
               <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="不开启" />
            </RelativeLayout>
            <View 
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#55000000"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>